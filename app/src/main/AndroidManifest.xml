<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gipra.vicibshoppy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".server.BackendVolley"
        android:allowBackup="true"
        android:icon="@mipmap/ic_llogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_llogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.OrderHistoryActivity"/>
        <activity android:name=".activity.FinishActivity"/>
        <activity android:name=".activity.CheckoutActivity" />
        <activity android:name=".activity.SelectAddress" />
        <activity android:name=".activity.AddressActivity" />
        <activity android:name=".activity.ViewcartActivity" />
        <activity android:name=".activity.CategoryProducts" />
        <activity android:name=".activity.ProductActivity" />
        <activity android:name=".activity.ShoppyHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <receiver
            android:name=".application.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>