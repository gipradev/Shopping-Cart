    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorWhiteShoppy" />
            <corners android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
                />
        </shape>
    </item>
    <item android:right="0dp"
        android:top="0dp"
        android:left="0dp"
        android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimaryShoppy" />

            <corners android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
            />
        </shape>
    </item>
</layer-list>