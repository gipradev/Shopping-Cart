<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".VicibShoppy.activity.ProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="300dp"
        android:background="@color/colorAccent"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            android:visibility="visible">

            <ImageView
                android:id="@+id/noImage"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/no_image"
                android:visibility="gone"
                android:layout_height="300dp"></ImageView>

            <com.github.islamkhsh.CardSliderViewPager
                android:id="@+id/productSlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                app:auto_slide_time="3"
                app:cardSlider_indicator="@id/indicator"
                app:cardSlider_otherPagesWidth="24dp"
                app:cardSlider_pageMargin="12dp"
                app:cardSlider_smallScaleFactor=".9" />

            <com.github.islamkhsh.CardSliderIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:indicatorsToShow="5" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/ic_back"></ImageButton>
    </RelativeLayout>

    <include layout="@layout/shimmer_product_details"></include>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/start_curved"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/pName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/actualPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/dPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorGrey"
                    android:textSize="10dp"></TextView>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cartCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:clickable="true"
                android:longClickable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:layout_marginRight="34dp"
                app:contentPadding="2dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_shopping_cart"
                        android:backgroundTint="@color/colorWhite"></View>

                    <TextView
                        android:id="@+id/itemCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center"
                        android:text="2"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/changeLayout"
                android:background="@drawable/box_curved1"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/padding_10"
                android:visibility="visible"
                android:paddingRight="@dimen/padding_10"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text=" - "
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/pCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="25dp"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text=" + "
                    android:textColor="@color/colorBlack"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/padding_10"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingLeft="10dp"
            android:text="About this product"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/padding_10"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/pDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AboutOrange"
                android:textColor="@color/colorGrey"></TextView>

        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            <LinearLayout
                android:id="@+id/wishButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/switchIconView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:si_animation_duration="500"
                    app:si_disabled_alpha=".5"
                    app:si_disabled_color="#B8B3B3"
                    app:si_enabled="false"
                    app:si_no_dash="true"
                    app:si_tint_color="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_heart" />
            </LinearLayout>




            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/addToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="70dp"
                android:drawableRight="@drawable/ic_shopping_cart"
                android:gravity="center"
                android:visibility="visible"
                android:text="Add to Cart"
                android:textAppearance="?attr/textAppearanceButton"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:backgroundTint="@color/colorAccent"
                app:iconTint="@color/colorWhite"
                app:rippleColor="@color/colorDarkPrimary">

            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/viewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="70dp"
                android:drawableRight="@drawable/ic_shopping_cart"
                android:elevation="2dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="View Cart"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAppearance="?attr/textAppearanceButton"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:backgroundTint="@color/colorAccent"
                app:iconTint="@color/colorWhite"
                app:rippleColor="@color/colorDarkPrimary">

            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>